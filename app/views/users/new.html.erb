<div class="login">

<div class="text-center">
  <h1>Please sign up</h1>
  <%= form_for(@user) do |f| %>
    <h4><%= f.label :email %></h4>
    <h4><%= f.text_field :email %></h4>
    <h4><%= f.label :password %></h4>
    <h4><%= f.password_field :password %></h4>
    <%= f.submit "Create Account", class: "btn btn-primary btn-font-size" %>
  <% end %>
</div>
</div>
